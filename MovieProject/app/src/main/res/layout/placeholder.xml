<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/placeholder_layout"
    android:visibility="gone"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/placeholder_visual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src = "@drawable/baseline_local_movies_24"
        android:contentDescription="@string/placeholder" />


    <ImageView
        android:id="@+id/placeholder_visual2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src = "@drawable/heart_shape_red"
        android:contentDescription="@string/placeholder" />

    <TextView

        android:id="@+id/placeholder_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/no_movies_in_favorites_list"
        android:textColor="?android:attr/colorAccent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/placeholder_visual"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView

        android:id="@+id/placeholder_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/placeholder_text_favorites"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="?attr/actionBarSize"
        android:textColor="?attr/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/placeholder_text1"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>