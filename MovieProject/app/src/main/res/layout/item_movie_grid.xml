<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="195dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/photoGrid"
        android:layout_width="110dp"
        android:layout_height="165dp"
        android:layout_margin="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/heart_in_grid"
        android:src="@drawable/heart_shape_outlined"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@id/photoGrid"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="@id/photoGrid"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="heart" />

    <TextView
        android:id="@+id/title_grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/textview"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAlignment="center"
        android:scaleType="centerCrop"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/photoGrid"
        app:layout_constraintEnd_toEndOf="@id/photoGrid"
        app:layout_constraintTop_toBottomOf="@id/photoGrid" />

</androidx.constraintlayout.widget.ConstraintLayout>